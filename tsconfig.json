{
  // https://v3.nuxtjs.org/concepts/typescript
  // https://v3.nuxtjs.org/guide/directory-structure/tsconfig
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "@nuxt/types",
      "@nuxtjs/i18n"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
